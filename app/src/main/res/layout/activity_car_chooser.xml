<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CarChooserActivity">

    <RadioGroup
        android:id="@+id/cartype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <RadioButton
            android:id="@+id/carsmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Small"
            android:textSize="12pt"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/carsmall" />
        <RadioButton
            android:id="@+id/carmedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium"
            android:textSize="12pt"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/carmedium" />
        <RadioButton
            android:id="@+id/carbig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large"
            android:textSize="12pt"
            android:layout_margin="10dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/carbig" />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When:"
        android:layout_marginLeft="10dp"
        android:textSize="12pt"/>
    <RadioGroup
        android:id="@+id/date_time_sel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/hire_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Now"
            android:textSize="12pt"
            android:layout_margin="10dp" />
        <RadioButton
            android:id="@+id/hire_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date/time"
            android:textSize="12pt"
            android:layout_margin="10dp" />
    </RadioGroup>

    <TextView
        android:id="@+id/txt_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textSize="10pt"/>

    <Button
        android:id="@+id/btnFindCar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Find Car"/>
</LinearLayout>